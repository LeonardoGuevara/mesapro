<?xml version="1.0"?>
<launch>
    <arg name="audio_direct" default="/home/leo/rasberry_ws/src/mesapro/audio/" /> 
    <arg name="arduino_port" default="/dev/ttyACM0" /> 
    <arg name="time_without_msg" default="5"/>
    
    <node pkg="mesapro" type="audio_alerts.py" name="hri_audio_alerts"> 
	<param name="audio_direct" value="$(arg audio_direct)"/>
        <param name="time_without_msg" value="$(arg time_without_msg)"/>
    </node>
    <node pkg="rosserial_python" type="serial_node.py" name="rosserial"> 
	<param name="port" value="$(arg arduino_port)" />
    </node>
    <node pkg="mesapro" type="visual_alerts.py" name="hri_visual_alerts">
        <param name="time_without_msg" value="$(arg time_without_msg)"/> 
    </node>
</launch>


